{
  "tasks": [
    {
      "type": "shell",
      "label": "Compilar fichero activo en el editor",
      "command": "g++",
      "args": ["-g", "-Wall", "-Wextra", "${file}", "-o", "./bin/${fileBasenameNoExtension}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Ejecutar fichero activo en el editor",
      "command": "./bin/${fileBasenameNoExtension}",
      "windows": {
        "command": "chcp 65001 ; .\\bin\\${fileBasenameNoExtension}.exe"
      },
      "dependsOn": "Compilar fichero activo en el editor",
      "problemMatcher": []
    }
  ],
  "presentation": {
    "showReuseMessage": true,
    "panel": "shared",
    "reveal": "always",
    "focus": true
  },
  "version": "2.0.0"
}
